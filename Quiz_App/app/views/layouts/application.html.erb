<!DOCTYPE html>
<html>
  <head>
    <title>LoginOut</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://bootswatch.com/4/slate/bootstrap.min.css">
    
    <%#= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1 style="color:green; text-align: center;">
      Quiz Your IQ
    </h1>  
    <% if cur_user %>
      <%#= cur_user.name %>  <%#= link_to "Logout", '/logout' %>
      <% if cur_user.admin_mode %>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
          <div class="navbar-header">
          <ul class="nav navbar-nav">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
          <li><a class="navbar-brand" href="/users/">Index for Users</a></li>
          <li><a class="navbar-brand" href="/questions/new">Add New Questions</a></li>
          <li><a class="navbar-brand" href="/genres/new">Add New Genre</a></li>
          <li><a class="navbar-brand" href="/sub_genres/new">Add New Sub Genre</a></li>
          </ul>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <li><a class="navbar-brand" href="/users/<%= cur_user.id %>">Signed in as <%= cur_user.name %></a></li>
            <li><a class="navbar-brand" href="/logout">Logout</a></li>
          </ul>
        </div>
        </div>
        </nav>
        <% else %>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
          <div class="navbar-header">
          </div>
          <ul class="nav navbar-nav navbar-right">
            <li><a class="navbar-brand" href="/users/<%= cur_user.id%>">Signed in as <%= cur_user.name %></a></li>
            <li><a class="navbar-brand" href="/logout">Logout</a></li>
          </ul>
        </div>
        </div>
        </nav>
        <%#= link_to "Add New Sub Genre","/sub_genres/new"%>
      <% end %>
    <% else %> 
        <nav class="navbar navbar-default">
          <div class="container-fluid">
          <div class="navbar-header">
          <ul class="nav navbar-nav">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
          <li><a class="navbar-brand" href="/login">Login</a></li>
          <li><a class="navbar-brand" href="/users/new">Signup</a></li>
          </ul>
          </div>
          </div>
          </nav>
      <%#= link_to 'Login', '/login' %>  <%#= link_to 'Signup', '/users/new' %>
    <% end %>

    <%= yield %>
  </body>
</html>
