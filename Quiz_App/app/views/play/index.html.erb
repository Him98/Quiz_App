<% if cur_user.admin_mode %><br/>
	You are in ADMIN MODE<br/>
	<h1>
		All Questions
	</h1>
	<table>
		<tr>
			<th>
				Name
			</th>
			<th>
				Email
			</th>
		</tr>
	<% @user.each do |user| %>
		<tr>
			<td>
				<%= user.name %>
			</td>
			<td>
				<%= user.email %>
			</td>
			<td>
				<%= link_to 'delete',user, method: :delete, data: { confirm: 'Are you sure?'} %>
			</td>
			<td>
				<%= link_to 'show',user, method: :get %>
			</td>
			<td>
				<%= link_to 'edit','/users/'+user.id.to_s+'/edit', method: :get %>
			</td>
		</tr>
	<% end %>
	</table>
	
	<% else %>
		<p style="color:red">Access Denied</p>
	<% end %>