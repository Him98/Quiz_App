<h1>Login</h1>

<%= form_tag '/login' , html: {:class => "form-horizontal"} do%>
<fieldset>
<div class="form-group">
<div class="col-lg-10">
  Email: <br/><%= text_field_tag :email %><br/>
</div> 
</div>
<div class="form-group">
<div class="col-lg-10">
  Password: <br/><%= password_field_tag :password %><br/>
</div> 
</div>

<div class="form-group">
<div class="col-lg-10">
  <%= submit_tag "Submit" , :class => "btn btn-info" %>
</div>
</div>
</fieldset>
<% end %>