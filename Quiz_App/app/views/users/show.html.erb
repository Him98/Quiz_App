<p>
	<h1>Name: </h1>
	<%= cur_user.name %>
</p>

<p>
	<h1>Email:</h1>
	<%= cur_user.email %>
</p>


<%# if cur_user.admin_mode && @user.admin_mode %>
	<%#= link_to "index","/users", method: :get %>


<% if !@user.admin_mode && !cur_user.admin_mode %>
	<h1>Quizzes:</h1>
	<table class="table table-striped table-hover ">
		<thead>
		<tr>
			<th>Genre Name</th>
			<th>Link To Subgenre</th>
			<th>Leader Board</th>
		</tr>
		</thead>
		<tbody>
		<% @genres.each do |i| %>
			<tr>
				<td><%= i.genreName %></td>
				<td><%= link_to "Go to subgenre",genre_path(:id => i.genreId , :genreName => i.genreName), method: :get %></td>
				<td><%= link_to "LeaderBoard",users_leaderboard_path(:genreName => i.genreName), method: :get %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
<% end %>
<% if cur_user.admin_mode %>
	<h1>
		Selected User Details
	</h1>
	<p>
		<h2>Name: </h2>
		<%= @user.name %>
	</p>

	<p>
		<h2>Email:</h2>
		<%= @user.email %>
	</p>
<% end %>